<section class="signup">
  <h2 class="page-title">Sign up</h2>

  <form class="signup-form wrapper" action="/signup/new" method="post" enctype="multipart/form-data">
      <label>Name</label>
      <input type="text" name="input_name" placeholder="Name" class="signup-input">

      <label>Email address</label>
      <input type="text" name="input_email" placeholder="Email Address" class="signup-input">

      <label>Password</label>
      <input type="password" name="input_password" placeholder="Password" class="signup-input">

      <label>Confirm password</label>
      <input type="password" name="password_confirm" placeholder="Confirm Password" class="signup-input">

      <button class="btns">Create Account</button>
    </form>

</section>
