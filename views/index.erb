<section class="index-body">
  <h2>Upcoming Home Games</h2>
  <form action="/games">
  <select name="search-by-city">
    <% @cities.each do |city| %>
      <% if city == @current_city %>
      <option value="<%=city%>" selected><%=city%></option>
      <%else%>
      <option value="<%=city%>"><%=city%></option>
      <%end%>
    <%end%>
  </select>
  <button>Search</button>
  </form>

  <button><a class="create-game" href="/games/new">Create my home game</a></button>


  <% @all_games.each do | game | %>
    <p> <a href="/games/show?id=<%=game.id%>"><%= game.game_date %> <%= game.city %> $<%= game.buy_in %> @<%= game.address %></a> </p>

  <% end %>
</section>
