<section class="index-body">
  <h2>Upcoming Home Games</h2>
  <form action="/games">
  <select name="search-by-city">
    <% @cities.each do |city| %>
      <% if city == @current_city %>
      <option value="<%=city%>" selected><%=city%></option>
      <%else%>
      <option value="<%=city%>"><%=city%></option>
      <%end%>
    <%end%>
  </select>
  <button>Search</button>
</form>
<br/>
<button class="allBtn"><a href='/games'>All</a></button><br/>
<% @games.each do |game| %>
  <p>
    <a class="games" href="/games/<%=game.id%>">
    </a>
  </p>
  <%end%>


  <button><a class="create-game" href="/games/new">Create my home game</a></button>

</section>
